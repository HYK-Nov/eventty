<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eventty.businessservice.domain.repository.TicketRepository">

    <resultMap id="TicketResultMap" type="com.eventty.businessservice.domain.entity.TicketEntity">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="quantity" column="quantity"/>
        <result property="eventId" column="event_id"/>
        <result property="is_deleted" column="is_deleted"/>
    </resultMap>

    <!-- 이벤트 별 티켓 조회 -->
    <select id="selectTicketByEventId" resultMap="TicketResultMap" parameterType="java.lang.Long">
        SELECT * FROM tickets
        WHERE event_id = #{event_id} AND is_deleted = false;
    </select>

    <!-- 이벤트 별 티켓 생성 -->
    <insert id="insertTicket" parameterType="com.eventty.businessservice.domain.entity.TicketEntity" useGeneratedKeys="true" keyColumn="id">
        INSERT INTO tickets (name, price, quantity, event_id, is_deleted)
        VALUES (#{name}, #{price}, #{quantity}, #{eventId}, #{is_deleted});
    </insert>

    <!--티켓 정보 삭제-->
    <update id="deleteTicket" parameterType="java.lang.Long" useGeneratedKeys="true" keyColumn="id">
        UPDATE tickets
        SET is_deleted = true
        WHERE event_id = #{event_id}
    </update>

</mapper>